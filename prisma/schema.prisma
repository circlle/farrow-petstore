// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  image       String?
  pet         Pet[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String?  @unique
  avatar    String?
  createdAt DateTime @default(now())
  Order     Order[]
}

model Pet {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  price       Float
  costPrice   Float
  description String
  photos      PetPhoto[]
  categoryId  Int?
  category    Category?  @relation(fields: [categoryId], references: [id])
  status      PetStatus  @default(AVAILABLE)
  Order       Order[]
}

model PetPhoto {
  id    Int    @id @default(autoincrement())
  petId Int?
  url   String
  Pet   Pet?   @relation(fields: [petId], references: [id])
}

model Order {
  id       Int         @id @default(autoincrement())
  petId    Int
  pet      Pet         @relation(fields: [petId], references: [id])
  userId   Int
  user     User        @relation(fields: [userId], references: [id])
  shipDate DateTime    @default(now())
  status   OrderStatus @default(NEW)
  complete Boolean
}

enum OrderStatus {
  NEW
  CONFIRMED
  DELETED
}

enum PetStatus {
  AVAILABLE
  PENDING
  SOLD
}
